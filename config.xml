<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>乐购</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- 设置app图标 -->
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="res/icon/logo.png" density="ldpi" />
        <icon src="res/icon/logo.png" density="mdpi" />
        <icon src="res/icon/logo.png" density="hdpi" />
        <icon src="res/icon/logo.png" density="xhdpi" />
        <icon src="res/icon/logo.png" density="xxhdpi" />
        <icon src="res/icon/logo.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- 设置app图标 -->
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="res/icon/logo.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/icon/logo.png" width="60" height="60" />
        <icon src="res/icon/logo.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icon/logo.png" width="76" height="76" />
        <icon src="res/icon/logo.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="res/icon/logo.png" width="40" height="40" />
        <icon src="res/icon/logo.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="res/icon/logo.png" width="57" height="57" />
        <icon src="res/icon/logo.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="res/icon/logo.png" width="72" height="72" />
        <icon src="res/icon/logo.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icon/logo.png" width="29" height="29" />
        <icon src="res/icon/logo.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/icon/logo.png" width="50" height="50" />
        <icon src="res/icon/logo.png" width="100" height="100" />
    </platform>
</widget>
